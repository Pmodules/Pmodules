#!/usr/bin/env modbuild

pbuild::configure() {
	:
}

pbuild::build() {
	case ${OS} in
		Linux )
			declare -x LDFLAGS="-lintl"
			;;
		Darwin )
			declare -x LDFLAGS="-lintl -liconv -framework CoreFoundation"
			;;
	esac

	cd "${MODULE_SRCDIR}"
	make -e
}

pbuild::install() {
	cd "${MODULE_SRCDIR}"
	declare -x DESTDIR="${PREFIX}"
	declare -x prefix=''
	make -e install
}

pbuild::cleanup_build() {
	cd "${MODULE_SRCDIR}"
	make -e realclean
}

pbuild::add_to_group 'Tools'
pbuild::make_all

# Local Variables:
# mode: sh
# sh-basic-offset: 8
# tab-width: 8
# End:
