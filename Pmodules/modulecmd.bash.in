#set -e		# exit on error
set -u		# Treat unset variables as an error
set -o pipefail

# used in some output messages only
declare -r CMD='module'
declare    subcommand=''

declare -r mydir="$(cd $(/usr/bin/dirname "$0") && pwd)"
declare -- prefix="$(/usr/bin/dirname "${mydir}")"
