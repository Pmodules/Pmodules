	if (( ${#args[@]} != 2 )); then
	        std::die 3 "%s %s: %s\n" \
                         "${CMD}" "${subcommand}" \
                         "two arguments required not less not more"
	fi
	"${modulecmd}" "${Shell}" "${subcommand}" "${args[@]}"
