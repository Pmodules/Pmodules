#!/usr/bin/env modbuild

pbuild::configure() {
	case ${OS} in
	Linux )
		srcdir="${MODULE_SRCDIR}/unix"
		;;
	Darwin )
		srcdir="${MODULE_SRCDIR}/macosx"
		;;
	esac
	"${srcdir}"/configure \
		--prefix="${PREFIX}" \
		--enable-shared=no \
		|| exit 1
}

pbuild::post_install() {
	{ cd "${PREFIX}"/bin && rm -f tclsh && ln -fs tclsh${V%.*} tclsh; };
}

pbuild::add_to_group 'Tools'
pbuild::set_docfiles 'license.terms' 'README'
pbuild::make_all
